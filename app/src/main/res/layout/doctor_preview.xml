<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F1F3F4"
        android:layout_height="450dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/doctor_photo"
            android:layout_width="300dp"
            android:scaleType="centerCrop"
            android:layout_height="300dp"
            tools:src="@drawable/docto5"
            />
        <TextView
            android:id="@+id/doctor_name"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="#202124"
            tools:text="Скам Скамович"
            android:fontFamily="@font/montserrat_medium"
            android:background="#D2E3FC"/>

        <TextView
            android:id="@+id/doctor_sevices"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            android:textColor="#202124"
            android:background="#D2E3FC"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            tools:text="Консультация, Рентген, Анализ крови"/>
        <Button
            android:id="@+id/more_about_button"
            android:layout_width="wrap_content"
            android:text="Подробнее"
            android:fontFamily="@font/montserrat_medium"
            android:textSize="20dp"
            android:textColor="#FFF9F9"
            android:backgroundTint="#4285F4"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>