<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#F1F3F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:text="Регистрация"
            android:textSize="40dp"
            android:fontFamily="@font/montserrat_medium"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20dp"
                android:text="Ваше ФИО" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_name"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Введите ФИО"
            android:textColorHint="#9AA0A6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20dp"
                android:text="Ваша почта" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_email"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Введите email"
            android:textColorHint="#9AA0A6" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textSize="20dp"
                    android:text="Ваша дата рождения" />
            </LinearLayout>

            <EditText
                android:id="@+id/birhday_register"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="Введите др"
                android:textColorHint="#9AA0A6" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="20dp"
                android:text="Ваша телефон" />
        </LinearLayout>

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="Введите телефон"
            android:textColorHint="#9AA0A6" />

        <Button
            android:id="@+id/register_account_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#34A853"
            android:fontFamily="@font/montserrat_medium"
            android:text="Зарегистрироваться"
            android:textSize="20dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>